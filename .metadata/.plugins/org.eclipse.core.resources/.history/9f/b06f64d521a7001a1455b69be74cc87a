package usedbookmarketplace.model.database;

import java.util.Vector;

import usedbookmarketplace.model.data.Book;
import usedbookmarketplace.model.data.user.GeneralUser;
import usedbookmarketplace.model.filesystem.FileProcess;

public class Database {

	private Vector<Book> bookList = new Vector<Book>();
	private Vector<GeneralUser> accountList = new Vector<GeneralUser>();

	public Database() {
		FileProcess file = new FileProcess();
		bookList = file.readBookFile("DB_book.txt");
		accountList = file.readAccountFile("DB_account.txt");

		for (int i = 0; i < bookList.size(); i++) {
			for (int j = 0; j < accountList.size(); j++) {
				if (bookList.get(i).getSellerID().equals(accountList.get(j).getID()))
					accountList.get(j).addBook(bookList.get(i));
			}
		}
		
		System.out.println(bookList);
		System.out.println(accountList);
	}
}
