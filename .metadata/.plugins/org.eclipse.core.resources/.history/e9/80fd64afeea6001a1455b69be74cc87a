package UsedBookMarketplace;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

import ProductManagement.AddProductLineGUI;

public class MainFrame extends JFrame{
	CardLayout card = new CardLayout();
	Login login = new Login();
	Search search = new Search();

	public MainFrame(){
		
		setLayout(card);
		this.add("LOGIN", login);
		this.add("SEARCH", search);
		
		setTitle("Used-book Marketplace");
		setSize(640, 480);
		setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		
		setVisible(true);
	}

	private void events(){		
		login.register_btn.addActionListener(new ActionListener(){
			public void actionPerformed(ActionEvent e){
				card.show(getContentPane(), "SEARCH");
			}
		});
}
